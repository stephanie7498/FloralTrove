{
  "expo": {
    "name": "Flora Trove",
    "slug": "flora-trove",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "platforms": [
      "ios",
      "android"
    ],
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "backgroundColor": "#4a7c4a",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.floratrove.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take pictures of flowers for identification.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select flower images for identification."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#4a7c4a"
      },
      "package": "com.floratrove.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    }
  }
}